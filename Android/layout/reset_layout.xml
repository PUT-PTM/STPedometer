<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/LinearLayoutPopup"
              android:orientation="horizontal"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:background="#ffffff"
              android:layout_alignParentBottom="true">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="ZresetowaÄ‡ kroki?"
        android:textAlignment="center"
        android:textColor="#1acc41"
        android:layout_marginRight="36dp"
        android:layout_marginEnd="36dp"
        android:layout_marginTop="15dp"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/buttonCancel"
        android:layout_alignEnd="@+id/buttonCancel"/>

    <Button
        android:id="@+id/buttonCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_weight="2"
        android:background="#1acc41"
        android:text="Cancel"
        android:textColor="#ffffff"
        android:layout_marginLeft="19dp"
        android:layout_marginStart="19dp"
        android:layout_alignBaseline="@+id/buttonConfirm"
        android:layout_alignBottom="@+id/buttonConfirm"
        android:layout_toRightOf="@+id/buttonConfirm"
        android:layout_toEndOf="@+id/buttonConfirm"/>

    <Button
        android:id="@+id/buttonConfirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_weight="2"
        android:background="#1acc41"
        android:text="Reset"
        android:textColor="#ffffff"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="18dp"
        android:layout_marginStart="18dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>
</RelativeLayout>